{
    "title": "Mouse Back/Forward buttons",
    "rules": [
        {
            "description": "Replace mouse button 4 and 5 with apple-friendly shortcuts for back/forward",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button4"
                    },
                    "to": [
                        {
                            "key_code": "open_bracket",
                            "modifiers": [
                                "command"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button5"
                    },
                    "to": [
                        {
                            "key_code": "close_bracket",
                            "modifiers": [
                                "command"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}