# This file is intended to be symlinked to $HOME/.config/git/config
# Combine this with another config at $HOME/.gitconfig for system-specifics
[user]
    name = Anthony Perez
    email = anthony@amazingant.com
[github]
    user = amazingant
[core]
    autocrlf = input
    pager = less -RSM
    editor = vim
    whitespace = trailing-space,space-before-tab,tab-in-indent,cr-at-eol,tabwidth=4
[format]
    pretty = fuller
[alias]
    sb = status -sb
    lg1 = log --graph --branches --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)-- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    clearautotags = !git tag | grep AutoTag- | xargs git tag -d
    tagg = !git tag | grep -v AutoTag-
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=>\t\\2/' | sort
    this = !git init && git commit --allow-empty -m \"Initial commit\"
    cshow = !clear && git show
# "sync" pulls then pushes; I do this frequently to get changes from GitHub to
# other servers where a git remote has multiple URL entries
    sync = !git pull && git push && git push --tags
# diff aliases
    d = diff
    dif = diff
    difff = diff
    wd = diff --word-diff
    swd = diff --staged --word-diff
    sd = diff --staged
# clear & diff aliases
    cd = !clear && git diff
    cwd = !clear && git wd
    cds = !clear && git sd
    cwds = !clear && git swd
[color]
    ui = auto
[pull]
    ff = only
    rebase = false
[push]
    default = current
[merge]
    ff = false
[status]
    showUntrackedFiles = all
[tag]
    sort = version:refname
[versionsort]
# I typically only use the `-beta` suffix, but here's some extras anyway
    prereleaseSuffix = -alpha
    prereleaseSuffix = -beta
    prereleaseSuffic = -pre
    prereleaseSuffic = -rc
[annex]
    backends = SHA512E
[gc]
    reflogExpire = never
