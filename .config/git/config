# This file is intended to be symlinked to $HOME/.config/git/config
# Combine this with another config at $HOME/.gitconfig for system-specifics
[user]
    name = Anthony Perez
    email = anthony@amazingant.com
    signingkey = 5F7F02A9D0682C8814D36996388BEC273397CC44
[github]
    user = amazingant
[core]
    autocrlf = input
    pager = less -RSM
    editor = nvim
    whitespace = trailing-space,space-before-tab,tab-in-indent,cr-at-eol,tabwidth=4
    hookspath = ~/.config/git/hooks
    logAllRefUpdates = always
[format]
    pretty = fuller
[alias]
    sb = status -sb
    lg1 = log --no-show-signature --graph --branches --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)-- %an (%G?)%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    clearautotags = !git tag | grep AutoTag- | xargs git tag -d
    tagg = !git tag | grep -v AutoTag-
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=>\t\\2/' | sort
    this = !git init && git commit --allow-empty -m \"Initial commit\"
    cshow = !clear && git show --show-signature
    ls-cached-ignored = ls-files --cached --ignored --exclude-standard
# "sync" pulls then pushes; I do this to get changes from one server and push
# them to another, which generally requires that a git remote has multiple URL
# entries.
    sync = !git pull && git push && git push --tags
# diff aliases
    d = diff
    dif = diff
    difff = diff
    wd = diff --word-diff
    swd = diff --staged --word-diff
    sd = diff --staged
# clear & diff aliases
    cd = !clear && git diff
    cwd = !clear && git wd
    cds = !clear && git sd
    cwds = !clear && git swd
    close = !~/.config/git/close-cmd.sh
    relnotes = !~/.config/git/notes-cmd.sh
    issue = !~/.config/git/issue-cmd.sh
[color]
    ui = auto
[pull]
    ff = only
    rebase = false
[push]
    default = current
[merge]
    ff = false
[status]
    showUntrackedFiles = all
[tag]
    sort = version:refname
[versionsort]
# I typically only use the `-beta` suffix, but here's some extras anyway
    prereleaseSuffix = -alpha
    prereleaseSuffix = -beta
    prereleaseSuffic = -pre
    prereleaseSuffic = -rc
[annex]
    backends = SHA512E
[gc]
    reflogExpire = never
[stash]
    showPatch = true
[transfer]
    fsckobjects = true
[log]
    showSignature = true
[protocol "http"]
    allow = never
